{
  "name": "sandstone",
  "description": "Sandstone, a Typescript library for Minecraft datapacks & resource packs.",
  "version": "1.0.0-beta.1",
  "contributors": [
    {
      "name": "TheMrZZ - Florian ERNST",
      "url": "https://github.com/TheMrZZ"
    },
    {
      "email": "mulverin3@gmail.com",
      "name": "MulverineX",
      "url": "https://github.com/MulverineX"
    }
  ],
  "bugs": {
    "url": "https://github.com/sandstone-mc/sandstone/issues"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.31.21",
    "@smithed-mc/data-types": "^0.1.2",
    "@types/nearley": "^2.11.5",
    "@typescript/analyze-trace": "^0.4.0",
    "@typescript/native-preview": "^7.0.0-dev.20260101.1",
    "adm-zip": "^0.5.10",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.6",
    "nearley": "^2.20.1",
    "node-fetch": "^3.3.2",
    "prismarine-nbt": "^2.2.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.5.6",
    "@sandstone-mc/mcdoc-ts-generator": "^0.1.20",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/adm-zip": "^0.5.2",
    "@types/fs-extra": "^11.0.2",
    "@types/lodash": "^4.14.199",
    "@types/node": "^22.13.17",
    "@types/semver": "^7.5.3",
    "oxlint": "^1.42.0",
    "typescript": "^5.9.3"
  },
  "directories": {
    "lib": "src"
  },
  "engines": {
    "node": ">=22.13.17"
  },
  "homepage": "https://sandstone.dev",
  "keywords": [
    "autocompletion",
    "creator",
    "datapack",
    "generator",
    "language",
    "library",
    "minecraft",
    "preprocessor",
    "typescript"
  ],
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandstone-mc/sandstone.git"
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:types": "bun tsc -p tsconfig.build.json",
    "watch": "bun run scripts/watch.ts",
    "publishToNpm": "bun run build && bun publish",
    "format": "bun oxlint src --fix",
    "lint": "bun oxlint src",
    "update-from-mcdoc": "mcdoc-ts-generator --out-dir \"src/arguments/generated/\" --no-tsconfig"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./arguments": {
      "types": "./dist/arguments/index.d.ts",
      "import": "./dist/arguments/index.js",
      "default": "./dist/arguments/index.js"
    },
    "./commands": {
      "types": "./dist/commands/index.d.ts",
      "import": "./dist/commands/index.js",
      "default": "./dist/commands/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./flow": {
      "types": "./dist/flow/index.d.ts",
      "import": "./dist/flow/index.js",
      "default": "./dist/flow/index.js"
    },
    "./pack": {
      "types": "./dist/pack/index.d.ts",
      "import": "./dist/pack/index.js",
      "default": "./dist/pack/index.js"
    },
    "./variables": {
      "types": "./dist/variables/index.d.ts",
      "import": "./dist/variables/index.js",
      "default": "./dist/variables/index.js"
    }
  }
}
